
<div class="received">
<h2>Requests I've received</h2>
<ul id='requests' class="listing">

<%if @pendingrequests %>
  <% @pendingrequests.each do |singlerequest| %>
  <% singlerequest.each do |request| %>

    <li> Request Reference: <%= request.id %> <br>
          Check in date: <%= request.check_in_date %> <br>
          Check out date: <%= request.check_out_date%> <br>
          Space: <%  space = Space.get(request.space_id) %>
          <%= space.name %><br>
          Hirer's name: <%  hirer = User.get(request.user_id) %>
          <%=  hirer.name %> 

          <form action='/bookings' method='post'>
            <input type='hidden' name="answer" value="confirmed">
            <input type='hidden' name='requestid' value='<%= request.id%>'>
            <input type='submit' name='submit' value="Accept">
          </form>

            <form action='/bookings' method='post'>
            <input type="hidden" name="answer" value="denied">
            <input type='hidden' name='requestid' value='<%= request.id%>'>
            <input type='submit' name='submit' value="Deny">
          </form>

    </li>
    <% end %>
  <% end %>
  <% end%>
</ul>
</div>

<div class="made">
<h2>Requests I've made</h2>
<ul id='requests_made' class="listing" >

<%if @requests %>
  <% @myrequests.each do |request| %>


    <li>  Request Reference: <%= request.id %>
            <br>
            Check in date: <%= request.check_in_date %>
            <br>
            Check out date: <%= request.check_out_date%>
            <br>
            Space: <%  space = Space.get(request.space_id) %>
              <%= space.name %>
            <br>
            Status: <%= request.request_status %>
    </li>

  <% end %>
  <% end%>
</ul>
</div>


